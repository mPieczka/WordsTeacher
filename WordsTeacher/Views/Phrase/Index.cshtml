@model IEnumerable<WordsTeacher.Data.Entities.Phrase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BasePharse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranslatedPharse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranslationPronunciation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudioPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemaiderTimeUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDateUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateTimeUtc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BasePharse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranslatedPharse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranslationPronunciation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AudioPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemaiderTimeUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDateUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTimeUtc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>